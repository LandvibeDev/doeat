<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ae90"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_nangmyun"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/nangmyun" />

            <TextView
                android:id="@+id/text_nangmyun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="냉면" />

            <ImageView
                android:id="@+id/image_lamyun"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/lamyun" />

            <TextView
                android:id="@+id/text_lamyun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="라면" />

            <ImageView
                android:id="@+id/image_zzazangmyun"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/zzazangmyun" />

            <TextView
                android:id="@+id/text_zzazangmyun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="짜장면" />
        </LinearLayout>

    </ScrollView>


</FrameLayout>