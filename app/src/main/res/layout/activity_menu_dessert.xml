<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ae90"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_bingsu"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/bingsu" />

            <TextView
                android:id="@+id/text_bingsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="빙수" />

            <ImageView
                android:id="@+id/image_misutgaru"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/misutgaru" />

            <TextView
                android:id="@+id/text_misutgaru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="미숫가루" />

            <ImageView
                android:id="@+id/image_icehongsi"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/icehongsi" />

            <TextView
                android:id="@+id/text_icehongsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="아이스홍시" />

            <ImageView
                android:id="@+id/image_sikhae"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/sikhae" />

            <TextView
                android:id="@+id/text_sikhae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="식혜" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>