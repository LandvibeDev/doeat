<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26ae90"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_ddukbokgi"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/ddukbokgi" />

            <TextView
                android:id="@+id/text_ddukbokgi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="떡볶이" />

            <ImageView
                android:id="@+id/image_sundae"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/sundae" />

            <TextView
                android:id="@+id/text_sundae"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="순대" />

            <ImageView
                android:id="@+id/image_fry"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/fry" />

            <TextView
                android:id="@+id/text_fry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="튀김" />

            <ImageView
                android:id="@+id/image_gimbap"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/gimbap" />

            <TextView
                android:id="@+id/text_gimbap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="김밥" />

            <ImageView
                android:id="@+id/image_dduk"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:src="@drawable/dduk" />

            <TextView
                android:id="@+id/text_dduk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="떡" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>